<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<!--    Type date, income, expense-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/dailyDate">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp">

        <TextView
            android:id="@+id/recordDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Feb 11  Wednesday"
            android:textAlignment="viewStart"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_weight="1.2"
            app:autoSizeMaxTextSize="10sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:gravity="center|start"
            app:autoSizeTextType="uniform"
            android:textColor="@color/gray" />
        <TextView
            android:id="@+id/expenseDaily"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Expenses: 4,566  Income: 8,600"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="32dp"
            android:textAlignment="viewEnd"
            android:layout_weight="2"
            app:autoSizeMaxTextSize="10sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:gravity="center|end"
            app:autoSizeTextType="uniform"
            android:textColor="@color/gray" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

<!--    item details-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item">

        <View
            android:id="@+id/dItem"
            android:layout_width="match_parent"
            android:layout_height="0.00001dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Food"
            android:drawableStart="@drawable/ic_food"
            android:textAlignment="viewStart"
            android:layout_weight="1"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            app:autoSizeMaxTextSize="28sp"
            android:drawablePadding="12dp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:drawableTint="@color/white"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/itemValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-8,500"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textAlignment="viewEnd"
            android:layout_gravity="center|end"
            android:layout_weight="2"
            app:autoSizeMaxTextSize="28sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
