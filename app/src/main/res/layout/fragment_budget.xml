<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="20sp"
        android:background="@color/lessBlack"
        android:text="Reports"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/monthlyStat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/monthlyStat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:background="@drawable/stroke_background_selected"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="@id/headerText"
        app:layout_constraintEnd_toEndOf="@id/headerText">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Monthly Statistics"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="8dp"
            android:minHeight="50dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_right"
            android:drawableTint="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/monthOf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Mar"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginStart="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expenses"
                        android:gravity="center|start"
                        android:layout_weight="1"
                        android:minHeight="20dp"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/monthlyExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        style="@style/autoSize"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:gravity="center|start"
                        android:text="Income"
                        android:layout_weight="1"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:id="@+id/income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:text="0"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        style="@style/autoSize"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:gravity="center|start"
                        android:minHeight="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/gray" />
                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:text="0"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        style="@style/autoSize"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

   <include
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       layout="@layout/budget_item"
       app:layout_constraintStart_toStartOf="@id/monthlyStat"
       app:layout_constraintEnd_toEndOf="@id/monthlyStat"
       app:layout_constraintTop_toBottomOf="@id/monthlyStat"
       />

</androidx.constraintlayout.widget.ConstraintLayout>
