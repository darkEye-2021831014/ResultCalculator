<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="20sp"
        android:background="@color/lessBlack"
        android:text="Reports"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/monthlyStat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/monthlyStat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/stroke_background_selected"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="@id/headerText"
        app:layout_constraintEnd_toEndOf="@id/headerText">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Statistics"
            android:textStyle="bold"
            android:textColor="@color/white"
            style="@style/autoSize"
            android:padding="4dp"
            android:drawableEnd="@drawable/ic_right"
            android:drawableTint="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/monthOf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Mar"
                android:padding="4dp"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeTextType="uniform"
                android:layout_weight="0.8"
                android:gravity="center|start"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:layout_marginStart="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Expenses"
                    android:layout_weight="1"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/expense"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:text="13,200"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    style="@style/autoSize"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Income"
                    android:layout_weight="1"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/income"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="3,200"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Balance"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    style="@style/autoSize"/>
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="-10,000"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    style="@style/autoSize"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

   <include
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       layout="@layout/budget_item"
       app:layout_constraintStart_toStartOf="@id/monthlyStat"
       app:layout_constraintEnd_toEndOf="@id/monthlyStat"
       app:layout_constraintTop_toBottomOf="@id/monthlyStat"
       />

</androidx.constraintlayout.widget.ConstraintLayout>
