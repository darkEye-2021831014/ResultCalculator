<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvanceMode">

    <TextView
        android:id="@+id/LabelText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="By Default Students Name Will Be Empty. You Can Provide Name For Each Registration Number.\nRemember to click generate Result After Providing Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/gradeInfo"
        app:layout_constraintStart_toStartOf="@+id/gradeInfo"
        app:layout_constraintTop_toBottomOf="@+id/pdfSelector" />

    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_name"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="text|textPersonName|textAutoComplete"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="@+id/LabelText"
        app:layout_constraintTop_toBottomOf="@+id/LabelText" />

    <EditText
        android:id="@+id/regNo"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_regno"
        android:ems="10"
        android:hint="Enter RegNo"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="@+id/LabelText"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/gradeInfo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Please Enter The Credit Of A Course First Then Select The Pdf Result File For That Course."
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pdfSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Pdf"
        app:layout_constraintBottom_toBottomOf="@+id/creditA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/creditA"
        app:layout_constraintTop_toTopOf="@+id/creditA" />

    <EditText
        android:id="@+id/creditA"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_regno"
        android:ems="10"
        android:hint="Course Credit"
        android:inputType="number|numberDecimal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="@+id/gradeInfo"
        app:layout_constraintTop_toBottomOf="@+id/gradeInfo" />



    <!--    <Button-->
<!--        android:id="@+id/addGrade"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="32dp"-->
<!--        android:text="Add Grade"-->
<!--        android:textStyle="italic"/>-->
<!--    -->
    <View
        android:id="@+id/divider"
        android:layout_width="446dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regNo"
        app:layout_constraintVertical_bias="0.19" />
    <Button
        android:id="@+id/generateResult"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Generate Result"
        app:layout_constraintBottom_toBottomOf="@+id/clearSaved"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clearSaved"
        app:layout_constraintTop_toTopOf="@+id/clearSaved" />

    <Button
        android:id="@+id/clearSaved"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="Clear Saved Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <Button
        android:id="@+id/addName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Name"
        app:layout_constraintBottom_toBottomOf="@+id/regNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name" />

