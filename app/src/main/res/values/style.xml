<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularFab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set status bar color -->
        <item name="android:statusBarColor">@color/lessBlack</item>
        <!-- Set navigation bar color -->
        <item name="android:navigationBarColor">@color/lessBlack</item>
        <!-- Optionally, make the status bar icons light -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

<!--    keyboard button -->
    <style name="KeyboardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">13sp</item>
<!--        <item name="autoSizeMaxTextSize">18sp</item>-->
<!--        <item name="autoSizeMinTextSize">10sp</item>-->
<!--        <item name="autoSizeStepGranularity">1sp</item>-->
<!--        <item name="autoSizeTextType">uniform</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/lessBlack</item>

<!--        <item name="shapeAppearance">@style/SquareShape</item>-->
    </style>

    <style name="switchButton">
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">9sp</item>
<!--        <item name="autoSizeMaxTextSize">12sp</item>-->
<!--        <item name="autoSizeMinTextSize">6sp</item>-->
<!--        <item name="autoSizeStepGranularity">1sp</item>-->
<!--        <item name="maxLines">1</item>-->
<!--        <item name="autoSizeTextType">uniform</item>-->
    </style>

    <!-- Define Square Shape -->
    <style name="SquareShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="autoSize">
        <item name="autoSizeMaxTextSize">32sp</item>
        <item name="autoSizeMinTextSize">16sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">2sp</item>
    </style>


</resources>
